@model EntityLayer.Entities.Product
@using System.Web.Mvc;
@{
    ViewBag.Title = "Update";
    ViewBag.Breadcrump = "Ürün düzenle";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @*@Html.AntiForgeryToken()*@

                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" />
                </div>
                <br />
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description" />
                </div>
                <br />
                <div class="form-group">
                    <label>Görsel</label>
                    <img src="~/Content/Image/@Model.Image" height="80" width="80" />
                    <input type="file" class="form-control" name="file" />
                </div>
                <br />
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" class="form-control" name="Price" value="@Model.Price" />
                </div>
                <br />
                <div class="form-group">
                    <label>Onay</label>
                    @Html.EditorFor(x => x.IsApproved)
                </div>
                <br />
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
                </div>
                <br />
                <button class="btn btn-primary" type="submit">Onayla</button>
                <a href="/AdminProduct/Index" class="btn btn-primary">Ürün Listesi</a>
            </form>
        </div>
    </div>
</div>
