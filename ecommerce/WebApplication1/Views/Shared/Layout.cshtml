    <link rel="apple-touch-icon-precomposed" href="~/eshop/images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav">
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-envelope"></i> info@domain.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons float-right">
                            <ul class="nav">
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-facebook"></i></a></li>
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-twitter"></i></a></li>
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-linkedin"></i></a></li>
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-md-4 d-flex align-items-center">
                        <div class="logo">
                            <a href="/Home/Index"><img src="~/eshop/images/home/logo.png" alt="" /></a>
                        </div>
                    </div>
                    <div class="col-md-8 d-flex justify-content-end">
                        <div class="shop-menu d-flex">
                            <ul class="nav">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-user"></i> @Session["Ad"] @Session["Soyad"]</a></li>
                                    <li class="nav-item"><a class="nav-link" href="/Account/LogOut"><i class="fa fa-lock"></i> Çıkış Yap</a></li>
                                }
                                else
                                {
                                    <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="fa fa-lock"></i> Giriş Yap</a></li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item"><a class="nav-link" href="/Admin/Index"><i class="fa fa-lock"></i> Admin Paneli</a></li>
                                }
                                <li class="nav-item"><a class="nav-link" href="/Home/Index">Anasayfa</a></li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Cart/Index">
                                        <img src="~/Content/Image/sepet.png" width="30" height="30" />
                                        <label style="color:red">@*@{Html.RenderAction("TotalCount", "Cart");}*@</label>
                                    </a>
                                </li>
                                <li class="nav-item"><a class="nav-link" href="/Sales/Index"><i class="fa fa-dollar"></i> Satışlarım</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->
    </header><!--/header-->

    <div class="container">
        @RenderBody()
    </div>

    <footer id="footer">
        <!--Footer-->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="companyinfo">
                            <h2><span>e</span>-shopper</h2>

                        </div>
                    </div>
                    <div class="col-sm-7">
    <div class="row">
        <div class="col-sm-3">
            <div class="video-gallery text-center">
                <a href="#">
                    <div class="iframe-img">
                        <img src="~/eshop/images/home/iframe1.png" alt="" />
                    </div>
                    <div class="overlay-icon">
                        <i class="fa fa-play-circle-o"></i>
                    </div>
                </a>
                <p>Circle of Hands</p>
                <h2>24 DEC 2014</h2>
